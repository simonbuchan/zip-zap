{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2023",
    "module": "Node16",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2023", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src"],
  "exclude": ["**/*.test.ts"]
}
