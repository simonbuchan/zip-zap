{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2023",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "es2023",
      "dom",
      "dom.iterable"
    ],
    "types": [
      "react",
      "vite/client"
    ]
  },
  "include": [
    "src"
  ]
}
