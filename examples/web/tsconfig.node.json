{
  "compilerOptions": {
    "noEmit": true,
    "target": "es2023",
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "rewriteRelativeImportExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2023"],
    "types": ["node"]
  },
  "exclude": ["src", "node_modules"]
}
